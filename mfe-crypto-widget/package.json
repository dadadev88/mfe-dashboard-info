{
  "name": "mfe-crypto-widget",
  "version": "1.0.0",
  "description": "Crypto Widget - React app with Webpack Module Federation",
  "scripts": {
    "dev": "export ENVIRONMENT_APP=local && webpack-dev-server --config webpack.config.js --mode development",
    "build:local": "export ENVIRONMENT_APP=local && webpack --config webpack.config.js",
    "build:locals3": "export ENVIRONMENT_APP=locals3 && webpack --config webpack.config.js",
    "build:prod": "export ENVIRONMENT_APP=prod && webpack --config webpack.config.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
